<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/action_categoria">

    <fragment
        android:id="@+id/action_categoria"
        android:name="org.udg.pds.todoandroid.fragment.CategoriesFragment"
        android:label="HOME: TOTES LES CATEGORIES"
        tools:layout="@layout/fragment_categories" >
    <action
        android:id="@+id/action_action_profile_to_categories"
        app:destination="@id/action_categoria" />
